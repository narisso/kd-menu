ion-view(title="Men√∫")
    ion-content.has-header.padding
        ion-list
            ion-item.item-input
                i.icon.ion-search.placeholder-icon
                input(type='text', placeholder='Buscar')
            
            div(ng-repeat='p in products')    
                ion-item.item-divider(ng-show='CreateHeader(p.cat)')
                    | {{ p.cat }}
                    
                a.item.item-thumbnail-left(href='#/tab/menu/item/{{p.id}}')
                    img(src="images/menu/{{ p.img[0] }}", ng-show='!!p.img[0]')
                    h2 {{ p.name }}
                    p {{ p.desc }}
                    
                    span.item-note
                        | $ {{ p.precio }}